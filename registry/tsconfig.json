{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../templates/node-ts/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./modules/**/*", "./schemaValidators/**/*", "./repositories/**/*"],
  "exclude": ["node_modules"]
}
