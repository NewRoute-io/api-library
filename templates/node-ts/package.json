{
  "name": "node-template",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:local": "tsup --watch --onSuccess 'pnpm local:serve'",
    "dev:docker": "tsup --watch --onSuccess 'pnpm docker:serve'",
    "local:serve": "pkill -f 'node dist/server.js'; node dist/server.js &",
    "docker:serve": "if [ -f /tmp/server.pid ]; then kill -9 $(cat /tmp/server.pid); fi; node dist/server.js & echo $! > /tmp/server.pid",
    "prebuild:prod": "pnpm run clean",
    "build:prod": "NODE_ENV=production tsup",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
